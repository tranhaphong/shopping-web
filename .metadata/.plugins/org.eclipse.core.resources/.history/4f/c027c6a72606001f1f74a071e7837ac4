/* Điều chỉnh cho khối chứa form */
#article {
    text-align: center;  /* Căn giữa nội dung trong #article */
}

/* Điều chỉnh cho các thẻ DL, DT, DD */
dl {
    display: inline-block; /* Cho phép khối DL tự căn giữa trong #article */
    text-align: left; /* Đảm bảo văn bản bên trong DL được căn trái */
    width: 100%; /* Chiều rộng tối đa để giữ cho các phần tử con căn giữa */
}

dt, dd {
    display: block; /* Các phần tử DT và DD hiển thị dạng block */
    margin: 0 auto; /* Căn giữa các phần tử DT và DD */
    width: fit-content; /* Chiều rộng bằng nội dung bên trong, hỗ trợ tốt việc căn giữa */
}

/* Điều chỉnh cho các trường nhập liệu */
input[type="text"], input[type="password"], form:input {
    display: block; /* Đảm bảo rằng input là block-level để margin auto có hiệu lực */
    margin: 10px auto; /* Căn giữa các trường nhập liệu */
    width: 80%; /* Chiều rộng tương đối với khối DL */
    padding: 8px; /* Đệm cho dễ nhập liệu */
    border: 1px solid #ccc; /* Viền cho dễ nhìn */
    box-sizing: border-box; /* Bao gồm padding và border trong chiều rộng */
}

/* Điều chỉnh cho nút submit */
input[type="submit"] {
    display: block;
    width: 50%; /* Chiều rộng nút submit */
    margin: 20px auto; /* Căn giữa nút submit */
    padding: 10px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
